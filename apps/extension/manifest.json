{
  "manifest_version": 3,
  "name": "LinkyBoard",
  "description": "지식 관리의 새로운 패러다임, LinkyBoard로 시작해 보세요.",
  "version": "1.0.1",
  "permissions": ["sidePanel", "tabs", "identity", "pageCapture", "cookies"],
  "action": {
    "default_title": "LinkyBoard"
  },
  "side_panel": {
    "default_path": "dist/index.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": ["https://api.linkyboard.com/*", "http://localhost:3000/*"],
  "icons": {
    "128": "public/icon128.png"
  }
}

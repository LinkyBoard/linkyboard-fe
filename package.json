{
  "name": "linkyboard",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web --filter=@repo/types --filter=@repo/ui",
    "dev": "turbo run dev",
    "lint": "turbo lint --filter=extension --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:extension": "turbo dev --filter=extension --filter=@repo/types --filter=@repo/ui",
    "dev:web": "turbo dev --filter=web --filter=@repo/types --filter=@repo/ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "add": "^2.0.6",
    "husky": "^9.1.7",
    "pnpm": "^10.14.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "turbo": "^2.5.5",
    "tw-animate-css": "^1.3.6",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
